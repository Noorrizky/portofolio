    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <style>
        /* --- 1. CONFIGURATION --- */
        :root {
            --transition: 0.2s cubic-bezier(0.4, 0, 0.2, 1);
            --radius: 12px;
            --font-main: 'Plus Jakarta Sans', sans-serif;
            --font-mono: 'JetBrains Mono', monospace;
        }

        /* DARK THEME (Default) */
        [data-theme="dark"] {
            --bg-body: #09090b;       /* Zinc 950 */
            --bg-card: #18181b;       /* Zinc 900 */
            --bg-card-hover: #27272a; /* Zinc 800 */
            --text-main: #fafafa;
            --text-muted: #a1a1aa;
            --border: #27272a;
            --accent: #10b981;        /* Emerald */
            --accent-dim: rgba(16, 185, 129, 0.1);
        }

        /* LIGHT THEME */
        [data-theme="light"] {
            --bg-body: #ffffff;
            --bg-card: #f4f4f5;       /* Zinc 100 */
            --bg-card-hover: #e4e4e7; /* Zinc 200 */
            --text-main: #18181b;
            --text-muted: #52525b;
            --border: #e4e4e7;
            --accent: #059669;        /* Darker Emerald */
            --accent-dim: rgba(5, 150, 105, 0.1);
        }

        /* --- 2. GLOBAL RESET --- */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        html { scroll-behavior: smooth; }
        
        body {
            font-family: var(--font-main);
            background-color: var(--bg-body);
            color: var(--text-main);
            line-height: 1.6;
            transition: background-color 0.3s, color 0.3s;
            overflow-x: hidden;
            padding-top: 80px; /* Space for fixed nav */
        }

        /* --- 3. LAYOUT UTILITIES --- */
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .section-header {
            margin-bottom: 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .section-title {
            font-size: 1.5rem;
            font-weight: 700;
            letter-spacing: -0.02em;
        }

        .mono { font-family: var(--font-mono); }
        .text-accent { color: var(--accent); }

        /* --- 4. NAVIGATION --- */
        .navbar {
            position: fixed;
            top: 0; left: 0; right: 0;
            background: var(--bg-body); /* Solid background for cleaner look */
            border-bottom: 1px solid var(--border);
            z-index: 1000;
            padding: 1rem 0;
        }

        .nav-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-weight: 800;
            font-size: 1.2rem;
            text-decoration: none;
            color: var(--text-main);
            letter-spacing: -0.03em;
        }

        .nav-menu {
            display: flex;
            gap: 2rem;
        }

        .nav-link {
            text-decoration: none;
            color: var(--text-muted);
            font-size: 0.9rem;
            font-weight: 500;
            transition: color 0.2s;
        }
        
        .nav-link:hover, .nav-link.active { color: var(--text-main); }

        /* Theme Toggle */
        .theme-btn {
            background: none;
            border: 1px solid var(--border);
            color: var(--text-main);
            width: 36px; height: 36px;
            border-radius: 8px;
            cursor: pointer;
            display: grid;
            place-items: center;
            transition: all 0.2s;
        }
        .theme-btn:hover { background: var(--bg-card-hover); }

        /* --- 5. HERO SECTION --- */
        .hero {
            padding: 6rem 0;
            max-width: 800px;
        }

        .hero h1 {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            line-height: 1.1;
            margin-bottom: 1.5rem;
            letter-spacing: -0.03em;
        }

        .hero p {
            font-size: 1.125rem;
            color: var(--text-muted);
            margin-bottom: 2.5rem;
            max-width: 600px;
        }

        .badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background: var(--accent-dim);
            color: var(--accent);
            border-radius: 99px;
            font-size: 0.8rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-family: var(--font-mono);
        }

        /* --- 6. BENTO GRID (Experience & Skills) --- */
        .bento-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 1.5rem;
            margin-bottom: 4rem;
        }

        .card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 2rem;
            transition: transform var(--transition), border-color var(--transition);
        }

        .card:hover {
            border-color: var(--text-muted);
        }

        .exp-item {
            margin-bottom: 2rem;
            border-left: 2px solid var(--border);
            padding-left: 1.5rem;
        }
        .exp-item:last-child { margin-bottom: 0; }

        .exp-title { font-weight: 700; font-size: 1.1rem; margin-bottom: 0.25rem; }
        .exp-meta { 
            font-family: var(--font-mono); 
            font-size: 0.85rem; 
            color: var(--text-muted); 
            margin-bottom: 0.75rem;
            display: block; 
        }

        /* Skills Tags */
        .tag-container {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }
        .tag {
            background: var(--bg-body);
            border: 1px solid var(--border);
            padding: 0.4rem 0.8rem;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 500;
            font-family: var(--font-mono);
        }

        /* --- 7. PROJECTS (Grid) --- */
        .projects-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .project-card {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            height: 100%;
            transition: all 0.2s;
        }

        .project-card:hover {
            transform: translateY(-4px);
            border-color: var(--accent);
        }

        .project-icon {
            font-size: 1.5rem;
            color: var(--accent);
            margin-bottom: 1rem;
        }

        .project-title { font-size: 1.1rem; font-weight: 700; margin-bottom: 0.5rem; }
        .project-desc { 
            font-size: 0.9rem; 
            color: var(--text-muted); 
            margin-bottom: 1.5rem; 
            flex-grow: 1; 
        }

        .project-footer {
            border-top: 1px solid var(--border);
            padding-top: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .tech-mini { font-size: 0.75rem; color: var(--text-muted); font-family: var(--font-mono); }
        
        .btn-link { 
            color: var(--text-main); 
            text-decoration: none; 
            font-size: 0.9rem;
            transition: color 0.2s;
        }
        .btn-link:hover { color: var(--accent); }

        /* --- 8. CONTACT --- */
        .cta-section {
            text-align: center;
            padding: 4rem 0;
        }
        .btn-primary {
            display: inline-block;
            background: var(--accent);
            color: #000; /* Black text on green for contrast */
            padding: 0.8rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: opacity 0.2s;
        }
        .btn-primary:hover { opacity: 0.9; }

        /* --- MOBILE TWEAKS --- */
        @media (max-width: 768px) {
            .bento-grid { grid-template-columns: 1fr; }
            .nav-menu { display: none; } /* Hide menu on mobile for simplicity, or add toggle */
            
            /* Bottom Nav for Mobile */
            .mobile-nav {
                display: flex;
                position: fixed;
                bottom: 0; left: 0; right: 0;
                background: var(--bg-card);
                border-top: 1px solid var(--border);
                justify-content: space-around;
                padding: 0.8rem;
                z-index: 1001;
            }
            .mobile-nav a { color: var(--text-muted); font-size: 1.2rem; }
            .mobile-nav a.active { color: var(--accent); }
            body { padding-bottom: 60px; }
        }
        
        @media (min-width: 769px) {
            .mobile-nav { display: none; }
        }
    </style>
</head>
